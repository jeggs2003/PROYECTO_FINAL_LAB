@model PROYECTO.Models.Paciente

@{
    ViewData["Title"] = "Manual";
}

<h1>Manual</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Manual">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre_Comp" class="control-label"></label>
                <input asp-for="Nombre_Comp" class="form-control" />
                <span asp-validation-for="Nombre_Comp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Num_DPI" class="control-label"></label>
                <input asp-for="Num_DPI" class="form-control" />
                <span asp-validation-for="Num_DPI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edad" class="control-label"></label>
                <input asp-for="Edad" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UltimaConsulta" class="control-label"></label>
                <input asp-for="UltimaConsulta" class="form-control" />
                <span asp-validation-for="UltimaConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProxConsulta" class="control-label"></label>
                <input asp-for="ProxConsulta" class="form-control" />
                <span asp-validation-for="ProxConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tratamiento" class="control-label"></label>
                <input asp-for="Tratamiento" class="form-control" />
                <span asp-validation-for="Tratamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="modalidad" class="control-label"></label>
                <input asp-for="modalidad" class="form-control" />
                <span asp-validation-for="modalidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
